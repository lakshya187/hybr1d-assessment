generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique
  password    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userType    UserType
  catalogue   Catalogue? @relation(fields: [catalogueId], references: [id])
  catalogueId Int?       @unique
}

model Catalogue {
  id      Int       @id @default(autoincrement())
  User    User?
  Product Product[]
}

model Product {
  id          Int       @id @default(autoincrement())
  price       Int
  name        String
  catalogueId Int
  catalogue   Catalogue @relation(fields: [catalogueId], references: [id])
}

enum UserType {
  BUYER
  SELLER
}
